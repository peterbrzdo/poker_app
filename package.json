{
  "name": "poker-app",
  "version": "0.1.0",
  "description": "",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "prestart": "npm run build",
    "start": "node dist/.www/server.js",
    "start:dev": "ts-node .www/server.ts",
    "watch": "nodemon --watch lib .www/server.js",
    "lint": "eslint src test",
    "test": "mocha \"test/**/*.ts\" ",
    "test:smoketest": "mocha \"smoketest/*.ts\" ",
    "test:coverage": "c8 --check-coverage --lines 95 --functions 95 --branches 95 npm test"
  },
  "author": "Team Platinum",
  "license": "SAP SE",
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.13.0",
    "@types/passport": "^1.0.11",
    "@types/passport-jwt": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "c8": "^7.12.0",
    "chai": "^4.3.6",
    "eslint": "^8.12.0",
    "mocha": "^9.2.2",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.15",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "node-option": [
      "experimental-loader=ts-node/esm",
      "no-warnings"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/eslint-recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-trailing-spaces": "warn",
      "eol-last": [
        "error",
        "always"
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2,
          "maxEOF": 1
        }
      ],
      "quotes": [
        "error",
        "singles"
      ]
    },
    "ignorePatterns": [
      "dist"
    ],
    "root": true
  }
}
